{{ 'MA-CollectionMosaic.css' | asset_url | stylesheet_tag }}

{% for block in section.blocks %}
<div id="CollectionMosaic">
    <div class="grip-box-banners">

        <div class="grid-child-0">
            <a href="{{block.settings.image_content_image_url-0}}" class="grip-0" style="background-image: url('{{ block.settings.image_content_image-0 | img_url: 'master' }}');">
                    
                <div class="flex">
                    <span class="title-grip"> {{block.settings.title_grid-0}} </span>
                    <div class="overlay"></div>
                </div>
               
            </a>
        </div>

        <div class="grid-child-1">

